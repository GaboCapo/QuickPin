{
    "manifest_version": 3,
    "name": "ChromeQuickPin",
    "version": "0.1",
    "description": "Quickly create shortcuts for your favorite websites with a single click.",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icon48.png"
    },
    "permissions": []
  }